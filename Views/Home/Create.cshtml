@model WebTest.Models.Contact
<head>

</head>
<body>
    <header>
        <h2>Добавление контакта</h2>
    </header>
<form asp-action="create" asp-controller="home">

    <p>
        <label asp-for="FIO">ФИО</label><br/>
        <input type="text" class="input-ru" asp-for="FIO"/>
        <span asp-validation-for="FIO"/>
    </p>
     <p>
        <label asp-for="DateBoth">Дата Рождения</label><br/>
        <input type="date" asp-for="DateBoth"/>
        <span asp-validation-for="DateBoth"/>
    </p>
     <p>
        <label asp-for="Adress">Адрес</label><br/>
        <input type="text" asp-for="Adress"/>
        <span asp-validation-for="Adress"/>
    </p>
     <p>
        <label asp-for="InNmb">Внутренний номер</label><br/>
        <input type="text" class="input-number" maxlength="9" asp-for="InNmb" />
        <span asp-validation-for="InNmb"/>
    </p>
     <p>
        <label asp-for="OutNmb">Мобильный</label><br/>
        <input type="text" class="input-number" maxlength="11" asp-for="OutNmb" />
        <span asp-validation-for="OutNmb"/>
    </p>
     <p>
        <label asp-for="Email">Эл.Почта</label><br/>
        <input type="email" asp-for="Email"/>
        <span asp-validation-for="Email"/>
    </p>
     <p>
        <input type="submit" value="Отправить"/>
    </p>
</form>
</body>
 
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
<script> //разрешение на ввод только русских символов
$('body').on('input', '.input-ru', function(){
	this.value = this.value.replace(/[^а-яё\s]/gi, '');
});
</script>
<script> //разрешенине на ввод только цифр
    $('body').on('input', '.input-number', function(){
	this.value = this.value.replace(/[^0-9]/g, '');
});
</script>